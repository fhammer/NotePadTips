<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/llAdTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_notice"
            android:gravity="center"
            android:text="顶"
            android:textColor="#FF8200"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvAdTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="华东师大缓和俄u的话的很好的话的很好的话"
            android:textColor="#000000"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eeeeee"/>

    <LinearLayout
        android:id="@+id/llAdBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_notice"
            android:gravity="center"
            android:text="顶"
            android:textColor="#FF8200"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvAdBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="的时候就是经济学家酒店电话的很好的话"
            android:textColor="#000000"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>
